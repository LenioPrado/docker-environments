# Dockerfile para OtimizadorService

FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

COPY services/API/OtimizadorService/OtimizadorService.csproj services/API/OtimizadorService/
COPY services/Library/*/*.csproj services/Library/*/

RUN dotnet restore services/API/OtimizadorService/OtimizadorService.csproj

COPY . .

WORKDIR /src/services/API/OtimizadorService
RUN dotnet publish -c Release -o /app

FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS runtime
WORKDIR /app
COPY --from=build /app .

ENV ASPNETCORE_URLS=http://+:5008

EXPOSE 5008
ENTRYPOINT ["dotnet", "OtimizadorService.dll"]

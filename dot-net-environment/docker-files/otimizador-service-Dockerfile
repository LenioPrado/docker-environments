# Dockerfile para OtimizadorService

FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

COPY API/OtimizadorService/OtimizadorService.csproj API/OtimizadorService/
COPY Library/*/*.csproj Library/*/

RUN dotnet restore API/OtimizadorService/OtimizadorService.csproj

COPY . .

WORKDIR /src/API/OtimizadorService
RUN dotnet publish -c Release -o /app

FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS runtime
WORKDIR /app
COPY --from=build /app .

ENV ASPNETCORE_URLS=http://+:5008

EXPOSE 5008
ENTRYPOINT ["dotnet", "OtimizadorService.dll"]

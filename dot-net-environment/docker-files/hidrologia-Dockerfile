# Dockerfile para HidrologiaService

# Imagem base para compilação
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

# Copiar csprojs primeiro (para otimizar cache)
COPY API/HidrologiaService/HidrologiaService.csproj API/HidrologiaService/
COPY Library/*/*.csproj Library/*/

# Restaurar dependências
RUN dotnet restore API/HidrologiaService/HidrologiaService.csproj

# Copiar tudo
COPY . .

# Publicar app
WORKDIR /src/API/HidrologiaService
RUN dotnet publish -c Release -o /app

# Imagem final
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS runtime
WORKDIR /app
COPY --from=build /app .

# Porta padrão da sua aplicação
ENV ASPNETCORE_URLS=http://+:5002

EXPOSE 5002
ENTRYPOINT ["dotnet", "HidrologiaService.dll"]

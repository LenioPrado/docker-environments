# Dockerfile para StateService

FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

COPY API/StateService/StateService.csproj API/StateService/
COPY Library/*/*.csproj Library/*/

RUN dotnet restore API/StateService/StateService.csproj

COPY . .

WORKDIR /src/API/StateService
RUN dotnet publish -c Release -o /app

FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS runtime
WORKDIR /app
COPY --from=build /app .

ENV ASPNETCORE_URLS=http://+:5003

EXPOSE 5003
ENTRYPOINT ["dotnet", "StateService.dll"]

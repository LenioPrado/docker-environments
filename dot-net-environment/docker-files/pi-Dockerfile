# Dockerfile para PIService

FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

COPY API/PIService/PIService.csproj API/PIService/
COPY Library/*/*.csproj Library/*/

RUN dotnet restore API/PIService/PIService.csproj

COPY . .

WORKDIR /src/API/PIService
RUN dotnet publish -c Release -o /app

FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS runtime
WORKDIR /app
COPY --from=build /app .

ENV ASPNETCORE_URLS=http://+:5004

EXPOSE 5004
ENTRYPOINT ["dotnet", "PIService.dll"]

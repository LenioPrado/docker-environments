# Dockerfile para SAUService

FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

COPY services/API/SAUService/SAUService.csproj services/API/SAUService/
COPY services/Library/*/*.csproj services/Library/*/

RUN dotnet restore services/API/SAUService/SAUService.csproj

COPY . .

WORKDIR /src/services/API/SAUService
RUN dotnet publish -c Release -o /app

FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS runtime
WORKDIR /app
COPY --from=build /app .

ENV ASPNETCORE_URLS=http://+:5006

EXPOSE 5006
ENTRYPOINT ["dotnet", "SAUService.dll"]

# Dockerfile para PlanejamentoOperacaoService

FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

COPY API/PlanejamentoOperacaoService/PlanejamentoOperacaoService.csproj API/PlanejamentoOperacaoService/
COPY Library/*/*.csproj Library/*/

RUN dotnet restore API/PlanejamentoOperacaoService/PlanejamentoOperacaoService.csproj

COPY . .

WORKDIR /src/API/PlanejamentoOperacaoService
RUN dotnet publish -c Release -o /app

FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS runtime
WORKDIR /app
COPY --from=build /app .

ENV ASPNETCORE_URLS=http://+:5007

EXPOSE 5007
ENTRYPOINT ["dotnet", "PlanejamentoOperacaoService.dll"]
